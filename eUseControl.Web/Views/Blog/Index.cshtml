@using eUseControl.Domain.Enums
@using eUseControl.Extension
@model eUseControl.Models.UserData

@using WebMatrix.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Service";

    var db = Database.Open("eUseControl");
    var selectProductString = "SELECT * FROM DbProducts ORDER BY Prod_Id";
}

<!-- Blog section  -->
<section class="blog-section">
     <div class="blog-warp">
          <div class="row">
          @foreach (var row in db.Query(selectProductString))
          {
              <div class="col-lg-4 col-sm-6">
                  <div class="blog-post">
                      <img src="~/Content/themes/base/images/blog/camera.png" alt="">
                      <h3>~ @row.Prod_Name ~</h3>
                      <h5>@row.Prod_Desc</h5>
                      <a class="text-white btn btn-dark" style="width: 50%;">$@row.Prod_Price</a>
                  </div>
              </div>
          }
          </div>

     </div>
</section>
<!-- Blog section end  -->