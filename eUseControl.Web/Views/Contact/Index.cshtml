@{

     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Tittle = "Contact";
}

@using System.Web.Optimization


<!-- Contact section  -->
<section class="contact-section">
     <div class="container">
          <div class="row">
               <div class="col-lg-4">
                    <div class="contact-text">
                         <h3>Faceți legătura</h3>
                         <p>Introduceți numele și prenumele dumneavoastră. Scrieți un mesajul dorit. </p>
                         <p>Sau ne găsiți la adresa și numărul de telefon indicat mai jos. </p>
                         <ul>
                              <li>Bulevardul Mircea cel Bătrîn 21<br>Chișinău</li>
                              <li>+37362143689</li>
                              <li>photostudiolike@gmail.com</li>
                         </ul>
                    </div>
               </div>
               <div class="col-lg-8">
                    <form class="contact-form">
                         <div class="row">
                              <div class="col-lg-6">
                                   <input type="text" placeholder="Numele">
                              </div>
                              <div class="col-lg-6">
                                   <input type="text" placeholder="E-mail">
                              </div>
                              <div class="col-lg-4">
                              </div>
                              <div class="col-lg-12">
                                   <input type="text" placeholder="Subiect">
                                   <textarea class="text-msg" placeholder="Mesajul"></textarea>
                                   <button class="site-btn" type="submit">Trimite mesajul</button>
                              </div>
                         </div>
                    </form>
               </div>
          </div>
     </div>
</section>
<!-- Contact section end  -->